@model CampaignCommander.Data.ViewModels.CampaignViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CampaignName" class="control-label"></label>
                <input asp-for="CampaignName" class="form-control" />
                <span asp-validation-for="CampaignName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignDescription" class="control-label"></label>
                <input asp-for="CampaignDescription" class="form-control" />
                <span asp-validation-for="CampaignDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameMasterId" class="control-label"></label>
                <select asp-for="GameMasterId" class ="form-control" asp-items="ViewBag.GameMasterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class ="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="form-group">
                <h3>Invites</h3>
                <div class="form-group" id="invites">
                    <input name="campaign.Invitations[0]" class="form-control" />
                </div>
                <div class="btn btn-secondary" id="addMoreInvites">Add More Invites</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
