<script>
    $(function () {
        var inviteNum = 1;

        $("#addMoreInvites").click(function() {
            var newInput = "<input name='campaign.Invitations[" + inviteNum + "]' type='text' class='form-control' />";
            
            $("#invites").append(newInput);
            inviteNum++;
            return false;
        });
    });
</script>